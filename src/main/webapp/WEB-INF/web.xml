<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <listener>
        <listener-class>com.school.web.DbInitListener</listener-class>
    </listener>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.school.web.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>GradesService</servlet-name>
        <servlet-class>com.school.gwt.server.GradesServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GradesService</servlet-name>
        <url-pattern>/com.school.gwt.ProgressApp/gwt/grades</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>H2 DataSource</description>
        <res-ref-name>jdbc/SchoolDb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
